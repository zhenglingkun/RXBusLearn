<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zlk.com.rxbuslearn.MainActivity">

    <Button android:id="@+id/intent_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <TextView android:id="@+id/back_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
        android:layout_below="@id/intent_bt"/>

    <zlk.com.rxbuslearn.widget.PayPwdEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_text_tv"
        android:maxLength="6"
        android:inputType="numberPassword"
        app:borderWidth="1dp"
        app:pwdLength="6"
        app:borderColor="#ff0079c3"
        app:passwordColor="#ff0079c3"
        app:passwordWidth="8dp"
        app:pwdRectWidth="40dp"
        app:pwdRectSpace="4dp"
        app:pwdRectBgColor="@android:color/white"/>
</RelativeLayout>
