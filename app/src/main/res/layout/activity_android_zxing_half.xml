<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <zlk.com.rxbuslearn.scan.androidzxing.ScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/rl_scan_area"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tv_open_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:drawableTop="@mipmap/kaideng"
            android:tag="1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_scan_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/rl_scan_area"
        android:background="@color/background">


    </RelativeLayout>

</RelativeLayout>
